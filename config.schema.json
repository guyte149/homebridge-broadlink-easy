{
  "pluginAlias": "homebridge-broadlink-rm-pro",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "BroadlinkRMPro",
        "required": true
      },
      "hideWelcomeMessage": {
        "title": "hideWelcomeMessage",
        "type": "boolean"
      },
      "debug": {
        "title": "debug",
        "type": "boolean"
      },
      "hosts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "address": {
              "title": "IP Address / Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            },
            "mac": {
              "title": "MAC Address (lowercase no symbols)",
              "type": "string",
              "pattern": "^[a-f0-9]{12}$",
              "required": false,
              "placeholder": "a043b0541111"
            },            
            "isRfSupported": {
              "title": "isRfSupported",
              "type": "boolean"
            },    
            "isRM4": {
              "title": "isRM4",
              "type": "boolean"
            }
          },
          "required": [ "address", "isRfSupported", "isRM4" ]
        }
      }
    }
  }
}
